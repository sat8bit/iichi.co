<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence
             http://www.oracle.com/webfolder/technetwork/jsc/xml/ns/persistence/persistence_2_1.xsd">
    <persistence-unit name="iichicoMysqlUnit" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>co.iichi.entity.UserInfoEntity</class>
        <class>co.iichi.entity.GoogleOAuth2Entity</class>
        <class>co.iichi.entity.SessionEntity</class>
        <class>co.iichi.entity.BoardEntity</class>
        <class>co.iichi.entity.CommentEntity</class>
        <properties>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/iichico" />
            <property name="javax.persistence.jdbc.user" value="iichicoweb" />
            <property name="javax.persistence.jdbc.password" value="iichicoweb" />

            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect" />
            <property name="hibernate.show_sql" value="true" />
        </properties>
    </persistence-unit>
</persistence>